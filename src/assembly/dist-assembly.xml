<assembly>
    <id>dist</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <!--swagger dependencies-->
                <include>com.smartbear:swagger4j</include>
                <include>org.glassfish:javax.json</include>
                <include>javax.json:javax.json-api</include>
                <include>commons-lang:commons-lang</include>
                <include>io.swagger:swagger-parser</include>
                <include>io.swagger:swagger-core</include>
                <include>io.swagger:swagger-models</include>
                <include>com.fasterxml.jackson.core:jackson-databind</include>
                <include>com.fasterxml.jackson.datatype:jackson-datatype-joda</include>
                <include>com.fasterxml.jackson.dataformat:jackson-dataformat-yaml</include>
                <!--raml dependencies-->
                <include>org.raml:raml-parser</include>
                <include>org.yaml:snakeyaml</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>com.smartbear:ready-sample-plugin</include>
                <include>com.smartbear:soapui-swagger-plugin</include>
                <include>com.smartbear:soapui-raml-plugin</include>
            </includes>
            <unpackOptions>
                <excludes>
                    <exclude>com\smartbear\swagger\PluginConfig.class</exclude>
                    <exclude>com\smartbear\swagger\SwaggerApiImporter.class</exclude>
                    <exclude>com\smartbear\swagger\*Action*.class</exclude>
                    <!---->
                    <exclude>com\smartbear\soapui\raml\PluginConfig.class</exclude>
                    <exclude>com\smartbear\soapui\raml\importers\RamlApiImporter.class</exclude>
                    <exclude>com\smartbear\soapui\raml\actions\*Action*.class</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets> 
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/META-INF</outputDirectory>
            <includes>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/assembly</directory>
            <outputDirectory>/META-INF</outputDirectory>
            <includes>
                <include>readme.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>